// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
enum Signature{
  BASIC
  PREMIUM

}

model User{
  id          Int @id @default(autoincrement())

  name        String
  type        String
  email       String
  password    String
  favorites   Favorite[]

  signature   Signature @default(BASIC)
  address     Address[]  @relation("addressUser")

  creatAt   DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Payment{
  id             Int       @id @default(autoincrement())

  companyId      Int       @map("company_id")
  company        Company  @relation(fields:[companyId],references:[id])  

  toDate         DateTime
  dueDate        DateTime
  value          Int
  paymentForm    String
  advertising    String
  key            Int
  type           String
  
  creatAt   DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("payments")
}
model Company{
  id       Int @id @default(autoincrement())
  
  name      String
  category  String
  cnpj      String
  evaluate  Float
  places    String

  favorites Favorite[]
  payments  Payment[]
  adrressCompany  AddressCompany[]

  creatAt   DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("companies")
}

model Favorite{
  id        Int @id @default(autoincrement())
  

  userId    Int @map("user_id")
  users     User   @relation(fields:[userId],references:[id])  

  companyId Int @unique  @map("company_id")
  company Company  @relation(fields:[companyId],references:[id]) 
  
  creatAt   DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("favorites")

}
model Address {
  id            Int       @id @default(autoincrement())

  place         String
  number        Int

  users         User[]  @relation("addressUser")
  addressCompany AddressCompany[]

  zipcode       String
  lat           Float
  long          Float
  url           String

  creatAt   DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("address")
}

model AddressCompany{
  id            Int @id @default(autoincrement())

  companyId     Int @unique
  company       Company  @relation(fields:[companyId],references:[id]) 
  
  addressId     Int
  address       Address   @relation(fields:[addressId],references:[id])  

  creatAt   DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("address_company")
  }