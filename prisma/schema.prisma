generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

users{
  id          Int @id default(autoincrement())
  name        String
  type        String
  email       String
  password    String
  premium     enum(active,inactive)
  address     Address[]  @relation("address_user")
}

model Payments{
  id             int       @id @default(autoincrement())
  companyId      int       @map("company_id")
  company        company   @relation(fields:[companyId],references:[id])
  value          int
  toDate         DateTime
  dueDate        DataTime
  paymentForm    String
  advertising    String
  key            int
  type           String 
}
model Company{
  id       Int @id @default(autoincrement())
  name      String
  category  String
  cnpj      String
  evaluate  Float
  places    String
  favorites Favorite[]
  payments Payment[]
  adrress  Address[]
  creatAt   DateTime @default(now())
  updateAt  DateTime @updateAt
}

model Favorite{
  id        Int @id @default(autoincrement())
  companyId Int @unique
  userId    Int
  users     User
  company Company

}
model Adrress {
  id            Int       @id @default(autoincrement())
  place         String
  number        Int
  addres        Address[]  @relation("addres_user")
  zipcode       String
  lat           Float
  long          Float
  url           String
}

model Address_Company{
  id            int       @id @default(autoincrement())
  companyid     int @unique
  addressid     int
  company       Company
  address       Address
  
  }