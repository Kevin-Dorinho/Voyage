// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
enum Signature{
  BASIC
  PREMIUM

}

model User{
  id          Int @id @default(autoincrement())
  name        String
  type        String
  email       String
  password    String
  favorites   Favorite[]
  signature   Signature @default(BASIC)
  address     Address[]  @relation("addressUser")
  creatAt   DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Payment{
  id             Int       @id @default(autoincrement())
  companyId      Int       @map("company_id")
  company        Company @map("company_id") @relation(fields:[companyId],references:[id])  
  value          Int
  toDate         DateTime
  dueDate        DateTime
  paymentForm    String
  advertising    String
  key            Int
  type           String
  creatAt   DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("payments")
}
model Company{
  id       Int @id @default(autoincrement())
  name      String
  category  String
  cnpj      String
  evaluate  Float
  places    String
  favorites Favorite[]
  payments  Payment[]
  adrressCompany  AddressCompany[]
  creatAt   DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("companies")
}

model Favorite{
  id        Int @id @default(autoincrement())
  companyId Int @unique
  userId    Int 
  users     User  @map("user_id")  @relation(fields:[userId],references:[id])  
  company Company @map("company_id") @relation(fields:[companyId],references:[id]) 
  creatAt   DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("favorites")

}
model Address {
  id            Int       @id @default(autoincrement())
  place         String
  number        Int
  users         User[]  @relation("addresUser")
  addressCompany AddressCompany[]
  zipcode       String
  lat           Float
  long          Float
  url           String
  creatAt   DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("address")
}

model AddressCompany{
  id            Int @id @default(autoincrement())
  companyid     Int @unique
  addressid     Int
  company       Company @map("company_id")  @relation(fields:[companyId],references:[id]) 
  address       Address @map("company_id")   @relation(fields:[addresId],references:[id])  
  creatAt   DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("address_company")
  }