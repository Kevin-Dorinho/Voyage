generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

users{
  id          Int @id default(autoincrement())
  name        String
  type        String
  email       String
  password    String
  favorites   Favorite[]
  premium     enum(active,inactive)
  address     Address[]  @relation("address_user")
}

model Payments{
  id             int       @id @default(autoincrement())
  companyId      int       @map("company_id")
  company        company   @relation(fields:[companyId],references:[id])
  value          int
  toDate         DateTime
  dueDate        DataTime
  paymentForm    String
  advertising    String
  key            int
  type           String 
}
model Company{
  id       Int @id @default(autoincrement())
  name      String
  category  String
  cnpj      String
  evaluate  Float
  places    String
  favorites Favorite[]
  payments Payment[]
  adrressCompany  AddressCompany[]
  creatAt   DateTime @default(now())
  updateAt  DateTime @updateAt
}

model Favorite{
  id        Int @id @default(autoincrement())
  companyId Int @unique
  userId    Int 
  users     User    @relation(fields:[userId],references:[id])
  company Company   @relation(fields:[companyId],references:[id])

}
model Adrress {
  id            Int       @id @default(autoincrement())
  place         String
  number        Int
  users         User[]  @relation("addres_user")
  addressCompany addressCompany[]
  zipcode       String
  lat           Float
  long          Float
  url           String
}

model AddressCompany{
  id            int       @id @default(autoincrement())
  companyid     int @unique
  addressid     int
  company       Company@relation(fields:[companyId],references:[id])
  address       Address@relation(fields:[addresId],references:[id])
  
  }